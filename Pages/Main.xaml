<Page x:Class="_6Variant_Graf.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_6Variant_Graf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid Background="White">
        <Grid Background="LightCyan" VerticalAlignment="Top" Height="50">
            <Label Content="Главная страница" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Content="Выйти" Click="Exit_button" HorizontalAlignment="Right" VerticalAlignment="Center" Width="100" Height="30" Margin="10" Background="White"/>
            <Button Content="Добавить" Click="Add_Button" HorizontalAlignment="Right" VerticalAlignment="Center" Width="100" Height="30" Margin="10, 10, 120, 10" Background="White"/>
        </Grid>

        <Grid Margin="10,70,10,10">
            <ScrollViewer Background="LightCyan">
                <StackPanel x:Name="parent">
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
